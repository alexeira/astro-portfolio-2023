---
const { title } = Astro.props
---

<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <script
      async
      src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3630954887749456'
      crossorigin='anonymous'></script>
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='stylesheet' href='styles/main.css' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <script>
      function loadScript(a) {
        var b = document.getElementsByTagName('head')[0],
          c = document.createElement('script')
        ;(c.type = 'text/javascript'),
          (c.src = 'https://tracker.metricool.com/resources/be.js'),
          (c.onreadystatechange = a),
          (c.onload = a),
          b.appendChild(c)
      }
      loadScript(function () {
        beTracker.t({ hash: 'e174ed6f0f64f8a5c9719955c7738411' })
      })
    </script>
    <title>{title}</title>
    <link
      rel='preload'
      href='/fonts/TTCommonsBlack.otf'
      as='font'
      type='font/otf'
      crossorigin
    />
    <link
      rel='preload'
      href='/fonts/TTCommonsBold.otf'
      as='font'
      type='font/otf'
      crossorigin
    />
    <link
      rel='preload'
      href='/fonts/TTCommonsDemiBold.otf'
      as='font'
      type='font/otf'
      crossorigin
    />
    <link
      rel='preload'
      href='/fonts/TTCommonsExtraBold.otf'
      as='font'
      type='font/otf'
      crossorigin
    />
    <link
      rel='preload'
      href='/fonts/TTCommonsMedium.otf'
      as='font'
      type='font/otf'
      crossorigin
    />
    <link
      rel='preload'
      href='/fonts/TTCommonsRegular.otf'
      as='font'
      type='font/otf'
      crossorigin
    />
  </head>
  <body class='custom-bg flex flex-col text-white relative font-ttcommons'>
    <slot />
  </body>

  <style>
    .custom-bg {
      background-color: #fffcf2;
      opacity: 1;
    }
  </style>
  <style is:global>
    :root {
      --white: #ffffffeb;
      --black: #000000;
      --red: #ef4444;
      --blue-pastel: #1da1f2;
      --linkedin-blue: #0077b5;
    }
    .main-image {
      box-shadow: 8px 8px 0px var(--white);
    }
    .social {
      transition: all 0.25s ease-in-out;
      stroke: var(--white);
    }
    .social:hover {
      transform: translate3d(3px, -3px, 0);
      box-shadow: -3px 3px 0px;
    }
    #youtube-icon:hover {
      stroke: var(--red);
      box-shadow: -3px 3px 0px var(--red);
    }
    #twitter-icon:hover {
      stroke: var(--blue-pastel);
      box-shadow: -3px 3px 0px var(--blue-pastel);
    }
    #linkedin-icon:hover {
      stroke: var(--linkedin-blue);
      box-shadow: -3px 3px 0px var(--linkedin-blue);
    }
    .project-shadow {
      transition: all 0.25s ease-in-out;
    }
    .project-shadow:hover {
      transform: translate3d(3px, -3px, 0);
      box-shadow: -3px 3px 0px;
    }
  </style>
</html>
