---
import MainLayout from './MainLayout.astro'
import Prose from './Prose.astro'
const { frontmatter } = Astro.props
---

<MainLayout>
  <div
    class='flex flex-col max-w-[850px] m-auto gap-2 bg-white p-14 border shadow'
  >
    <span class='text-gray-500'>
      {new Date(frontmatter.pubDate).toLocaleDateString()}
    </span>
    <h1 class='text-4xl font-bold my-8'>{frontmatter.title}</h1>
    <Prose frontmatter={frontmatter}>
      <slot />
    </Prose>
  </div>
</MainLayout>
