---
import MainLayout from './MainLayout.astro'
import Prose from './Prose.astro'
const { frontmatter } = Astro.props
---

<MainLayout>
  <div class='flex flex-col max-w-[750px] m-auto px-2 gap-2'>
    <h1 class='text-4xl font-bold my-8'>{frontmatter.title}</h1>
    <Prose>
      <slot />
    </Prose>
  </div>
</MainLayout>
